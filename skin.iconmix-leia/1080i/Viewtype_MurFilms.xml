<?xml version="1.0" encoding="UTF-8"?>
<includes>
  <include name="Viewtype_MurFilms">
    <control type="group">
      <visible>Control.IsVisible(585)</visible>
      <!-- Browser -->
      <animation type="conditional" reversible="true" condition="true">
              <effect type="rotatey" center="0,400" start="0" end="-8" time="200" tween="sine" easing="inout" />
            </animation>
      
      
      <control type="panel" id="585">
        <viewtype label="31826">icon</viewtype>
        <posx>25</posx>
        <posy>85</posy>
        <width>2080</width>
        <height>730</height>
        <scrolltime>100</scrolltime>
        <orientation>vertical</orientation>
        <onright>585</onright>
        <onleft>585</onleft>      
        <preloaditems>2</preloaditems>
        <include>Animation_ZoomInZoomOut</include>
        <include>Animation_HiddenByInfo</include>
        <include>Animation_FadedByMenu</include>
        <include>Animation_OpenCloseFade</include>
        
         
        
        <itemlayout width="170" height="245">
          <control type="group">
            <control type="image">
              <posx>0</posx>
              <posy>0</posy>
              <width>160</width>
              <height>240</height>
              <texture background="true" diffuse="showcase_matte.png">$INFO[ListItem.Art(poster)]</texture>
              <aspectratio scalediffuse="true">stretch</aspectratio>
              <visible>!String.IsEmpty(ListItem.Art(poster))</visible>
              <colordiffuse>FF909090</colordiffuse>
            </control>
            <control type="image">
              <posx>0</posx>
              <posy>0</posy>
              <width>160</width>
              <height>240</height>
              <texture background="true" diffuse="showcase_matte.png">$INFO[ListItem.Icon]</texture>
              <aspectratio scalediffuse="true">keep</aspectratio>
              <visible>String.IsEmpty(ListItem.Art(poster))+!Container.Content(genres)</visible>
              <colordiffuse>FF909090</colordiffuse>
            </control>
            <control type="image">
              <posx>0</posx>
              <posy>0</posy>
              <width>160</width>
              <height>240</height>
              <texture fallback="DefaultMovieGenre.jpg">$VAR[VideoMusicGenres]</texture>
              <aspectratio scalediffuse="false">keep</aspectratio>
              <visible>String.IsEmpty(ListItem.Art(poster))+Container.Content(genres)</visible>
              <colordiffuse>FF909090</colordiffuse>
            </control>
            <control type="image">
              <posx>0</posx>
              <posy>0</posy>
              <width>160</width>
              <height>240</height>
              <texture>$VAR[Boitier_SelonResolution]</texture>
            </control>
            <include>isWatched</include>
            <include>ShowTotalTvEp</include>
            <include>AnimationCacheNonSelect</include>
          </control>
        </itemlayout>
        <focusedlayout width="170" height="270">
          <include>ActiveClearArt</include>
          <control type="group">
            <animation type="Conditional" reversible="false" condition="Integer.IsLess(Container(585).Column,2)">
              <effect type="zoom" center="auto" start="100" end="160" time="200" tween="sine" easing="inout" />
              <effect type="rotatey" center="auto" start="0" end="8" time="1" tween="sine" easing="inout" />
            </animation>
            <animation type="Conditional" reversible="false" condition="Integer.IsGreater(Container(585).Column,1)+Integer.IsLess(Container(585).Column,5)">
              <effect type="zoom" center="auto" start="100" end="170" time="200" tween="sine" easing="inout" />
              <effect type="rotatey" center="auto" start="0" end="8" time="1" tween="sine" easing="inout" />
            </animation>
            <animation type="Conditional" reversible="false" condition="Integer.IsGreater(Container(585).Column,4)+Integer.IsLess(Container(585).Column,7)">
              <effect type="zoom" center="auto" start="100" end="180" time="200" tween="sine" easing="inout" />
              <effect type="rotatey" center="auto" start="0" end="9" time="1" tween="sine" easing="inout" />
            </animation>
             <animation type="Conditional" reversible="false" condition="Integer.IsGreater(Container(585).Column,6)+Integer.IsLess(Container(585).Column,9)">
              <effect type="zoom" center="auto" start="100" end="190" time="200" tween="sine" easing="inout" />
              <effect type="rotatey" center="auto" start="0" end="10" time="1" tween="sine" easing="inout" />
            </animation>
             <animation type="Conditional" reversible="false" condition="Integer.IsGreater(Container(585).Column,8)+Integer.IsLess(Container(585).Column,11)">
              <effect type="zoom" center="auto" start="100" end="195" time="200" tween="sine" easing="inout" />
              <effect type="rotatey" center="auto" start="0" end="12" time="1" tween="sine" easing="inout" />
            </animation>
             <animation type="Conditional" reversible="false" condition="Integer.IsEqual(Container(585).Column,11)">
              <effect type="zoom" center="auto" start="100" end="205" time="200" tween="sine" easing="inout" />
              <effect type="rotatey" center="auto" start="0" end="15" time="1" tween="sine" easing="inout" />
            </animation>
           
            
            <control type="image">
              <posx>3</posx>
              <posy>22</posy>
              <width>160</width>
              <height>240</height>
              <texture background="true" diffuse="showcase_matte.png">$INFO[ListItem.Art(poster)]</texture>
              <aspectratio scalediffuse="true">stretch</aspectratio>
              <visible>!String.IsEmpty(ListItem.Art(poster))</visible>
            </control>
            <control type="image">
              <posx>3</posx>
              <posy>30</posy>
              <width>160</width>
              <height>240</height>
              <texture background="true" diffuse="showcase_matte.png">$INFO[ListItem.Icon]</texture>
              <aspectratio scalediffuse="true">keep</aspectratio>
              <visible>String.IsEmpty(ListItem.Art(poster))+!Container.Content(genres)</visible>
            </control>
            <control type="image">
              <posx>3</posx>
              <posy>30</posy>
              <width>160</width>
              <height>240</height>
              <texture fallback="DefaultMovieGenre.jpg">$VAR[VideoMusicGenres]</texture>
              <aspectratio scalediffuse="false">keep</aspectratio>
              <visible>String.IsEmpty(ListItem.Art(poster))+Container.Content(genres)</visible>
            </control>
            <control type="image">
              <posx>0</posx>
              <posy>0</posy>
              <width>166</width>
              <height>270</height>
              <texture>$VAR[Boitier_SelonResolution]</texture>
            </control>
            <control type="image">
              <posx>120</posx>
              <posy>200</posy>
              <width>38</width>
              <height>38</height>
              <texture>$INFO[ListItem.Overlay]</texture>
              <colordiffuse>WatchedOverlay</colordiffuse>
              <visible>!Skin.HasSetting(HideTVWatchedOverlays)</visible>
            </control>
          </control>
        </focusedlayout>
      </control>
      <include>ScrollBar_Vertical</include>
    </control>
  </include>
</includes>
