          <texture background="true">$VAR[CoverPlayer]</texture>
          <aspectratio aligny="bottom">keep</aspectratio>
          <bordertexture border="8">thumb_border.png</bordertexture>
          <bordersize>8</bordersize>
        </control>
      </control>




      <control type="label">
