      <control type="group">
        <control type="scrollbar" id="14">
          <description>My first scroll bar control</description>
          <left>80</left>
          <top>60</top>
          <width>250</width>
          <height>30</height>
          <visible>true</visible>
          <texturesliderbackground>slider/slider_back.png</texturesliderbackground>
