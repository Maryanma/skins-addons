      <animation type="Hidden">
        <effect type="slide" time="600" start="0" end="800"/>
      </animation>
      <animation type="Visible">
        <effect type="slide" time="600" start="800" end="0"/>
      </animation>
      <animation type="Conditional" condition="true">
        <effect type="rotate" center="1600,-90" end="-45" time="1" />

      </animation>
      -->
