<?xml version="1.0" encoding="UTF-8"?>
<includes>
		<include name="VueChoix">
		<control type="label" id="1010">
			<posy>-1000</posy>
			<label>$VAR[VisibleViewMode]</label>
			<width>1</width>
			<height>1</height>
		</control>

		<!-- pochette -->
		<control type="group">
			<visible>!String.IsEqual(Control.GetLabel(1010),3)+!Container.Content(Genres)</visible>
			<control type="image">
				<posx>20</posx>
				<posy>21</posy>
				<width>150</width>
				<bordersize>9</bordersize>
				<bordertexture border="9" colordiffuse="FFFFFFFF">landscapeinfo.png</bordertexture>
				<texture background="true" fallback="DefaultThumb.png">$VAR[PosterThumb]</texture>
				<aspectratio scalediffuse="false">scale</aspectratio>
				<visible>!IsEmpty(ListItem.Title)</visible>
			</control>
			<control type="image">
				<posx>20</posx>
				<posy>21</posy>
				<width>150</width>
				<bordersize>9</bordersize>
				<bordertexture border="9" colordiffuse="FFFFFFFF">landscapeinfo.png</bordertexture>
				<texture background="true">$INFO[ListItem.Icon]</texture>
				<aspectratio scalediffuse="false">scale</aspectratio>
				<visible>String.IsEmpty(ListItem.Title)+!Container.Content(genres)</visible>
			</control>
			<control type="image">
				<posx>20</posx>
				<posy>21</posy>
				<width>150</width>
				<bordersize>9</bordersize>
				<bordertexture border="9" colordiffuse="FFFFFFFF">landscapeinfo.png</bordertexture>
				<texture fallback="DefaultMovieGenre.jpg">$VAR[VideoMusicGenres]</texture>
				<aspectratio scalediffuse="false">scale</aspectratio>
				<visible>String.IsEmpty(ListItem.Title)+Container.Content(genres)</visible>
			</control>
			<control type="group">
				<visible>String.IsEqual(Control.GetLabel(1010),2)+!Container.Content(Genres)</visible>
				<control type="image">
					<description>Glass overlay</description>
					<posx>20</posx>
					<posy>5</posy>
					<width>149</width>
				<height>242</height>
					<texture>$VAR[Boitier_SelonResolution]</texture> <!-- <texture>frames/pochetteok.png</texture> -->
				</control>
			
			</control>
		</control>

		<!-- arrondies -->
		<control type="group">
			<visible>String.IsEqual(Control.GetLabel(1010),3)|Container.Content(Genres)</visible>
			<control type="image">
				<posx>20</posx>
				<posy>21</posy>
				<width>150</width>
				<texture background="true" diffuse="showcase_matte.png" fallback="DefaultThumb.png">$VAR[PosterThumb]</texture>
				<aspectratio scalediffuse="false">scale</aspectratio>
				<visible>!IsEmpty(ListItem.Title)</visible>
			</control>
			<control type="image">
				<posx>20</posx>
				<posy>21</posy>
				<width>150</width>
				<texture background="true" diffuse="showcase_matte.png">$INFO[ListItem.Icon]</texture>
				<aspectratio scalediffuse="false">scale</aspectratio>
				<visible>String.IsEmpty(ListItem.Title)+!Container.Content(genres)</visible>
			</control>
			<control type="image">
				<posx>20</posx>
				<posy>21</posy>
				<width>150</width>

				<texture background="true" diffuse="showcase_matte.png" fallback="DefaultMovieGenre.jpg">$VAR[VideoMusicGenres]</texture>
				<aspectratio scalediffuse="false">scale</aspectratio>
				<visible>String.IsEmpty(ListItem.Title)+Container.Content(genres)</visible>
			</control>

			<control type="image">
				<description>Glass overlay</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>190</width>
				<height>272</height>
				<texture>showcase_noshadow.png</texture>
			</control>
		</control>

	</include>
	<include name="Viewtype_FanartPleinEcran">
		
		<control type="group">
			<visible>Control.IsVisible(512)</visible>
			<include>Animation_OpenCloseFade</include>
			<include>Animation_FadedByMenu</include>
			<include>Animation_HiddenByInfo</include>
			
				
				<control type="wraplist" id="512">					
					<posx>0</posx>
					<posy>50</posy>
					<width>1940</width>
					<height>450</height>
					<include condition="!Skin.HasSetting(ViewLockdown)">OnUp7000</include>

<onfocus condition="Skin.HasSetting(CacheFond)">SetProperty(ActeurDirection,up,Home)</onfocus>
<onfocus condition="!Skin.HasSetting(CacheFond)">SetProperty(ActeurDirection,down,Home)</onfocus>


					<ondown>60</ondown>
					<viewtype label="31809">wrap</viewtype>
					<pagecontrol>60</pagecontrol>
					<orientation>horizontal</orientation>
					<scrolltime>250</scrolltime>
					<itemgap>50</itemgap>
					<focusposition>1</focusposition>
					<visible>!Skin.HasSetting(NoViewCoverflow)</visible>
					<visible>Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows) | Container.Content(seasons)</visible>
					<itemlayout height="250" width="180">
						<include>VueChoix</include>
					</itemlayout>
					
					<focusedlayout height="250" width="1550">
						
						
					</focusedlayout>
				</control>
				<control type="image">
					<posx>1850</posx>
					<posy>5</posy>
					<width>50</width>
					<height>50</height>
					<texture>ArrowRight.png</texture>
					
				</control>
				<control type="image">
					<posx>10</posx>
					<posy>5</posy>
					<width>50</width>
					<height>50</height>
					<texture>ArrowLeft.png</texture>
					
				</control>
			<include>ScrollBar_Horizontal</include>
		</control>
	
	</include>
</includes>
