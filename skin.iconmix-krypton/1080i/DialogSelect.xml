<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" >
	<defaultcontrol always="true">3</defaultcontrol>
	
	<controls>
		<control type="group">
			<posx>500</posx>
			<posy>300</posy>
			<width>800</width>
			<height>450</height>	
			<animation type="Conditional" condition="String.IsEqual(Container(3).ListItem.Label2,selectionnevue)|String.IsEqual(Container(6).ListItem.Label2,selectionnevue)" reversible="false">
						<effect type="slide" end="-450" time="10" />
						<!-- <effect type="rotatey" center="0,240" end="-20" time="10" /> -->
					</animation>		
			<control type="image">
				<texture background="true" >frames/Dialog_GlassActeur.png</texture>
				<colordiffuse>BackgroundColor</colordiffuse>
			</control>
			<control type="group">
				<posx>20</posx>
				<posy>0</posy>
				<control type="image">
					<posx>760</posx>
					<posy>20</posy>
					<width>350</width>
					<fadetime>100</fadetime>
					<animation type="Conditional" condition="String.IsEqual(Container(6).ListItem.Label2,selectionnevue)" reversible="false">
						<effect type="zoom" center="760,220" end="200" time="10" />
						<effect type="rotatey" center="0,0" end="20" time="10" />
						<effect type="slide" end="70" time="10" />
					</animation>
					<aspectratio align="left" aligny="center">keep</aspectratio>
					<texture fallback="DefaultThumb.png">$INFO[Container(6).ListItem.Icon]</texture>
					<bordersize>8</bordersize>
					<bordertexture border="8" colordiffuse="FFFFFFFF">landscape.png</bordertexture>
					<visible>!IsEmpty(Container(6).ListItem.Icon)</visible>
				</control>
				<control type="image">
					<posx>760</posx>
					<posy>20</posy>
					<width>350</width>
					<animation type="Conditional" condition="String.IsEqual(Container(3).ListItem.Label2,selectionnevue)" reversible="false">
						<effect type="zoom" center="760,220" end="200" time="10" />
						<effect type="rotatey" center="0,0" end="20" time="10" />
						<effect type="slide" end="70" time="10" />
					</animation>
					<fadetime>100</fadetime>
					<aspectratio align="left" aligny="center">keep</aspectratio>
					<texture fallback="DefaultThumb.png">$INFO[Container(3).ListItem.Icon]</texture>
					<bordersize>8</bordersize>
					<bordertexture border="8" colordiffuse="FFFFFFFF">landscape.png</bordertexture>
					<visible>!IsEmpty(Container(3).ListItem.Icon)</visible>
				</control>

				
				<control type="label" id="1">
					<description>Line 1</description>
					<posx>20</posx>
					<posy>55</posy>
					<width>730</width>
					<height>38</height>
					<font>comic24</font>
					<textcolor>lightgreen</textcolor>
					<align>center</align>
					<aligny>center</aligny>
					<label>[B]13406[/B]</label>
				</control>

				<control type="list" id="3">
					<posx>20</posx>
					<posy>100</posy>
					<width>730</width>
					<height>300</height>
					<onleft>7</onleft>
					<onup>3</onup>
					<ondown>3</ondown>
					<itemlayout height="38" width="730">
						<control type="label">
							<width>730</width>
							<height>38</height>
							<textcolor>SettingsDetail</textcolor>
							<font>comic20</font>
							<align>center</align>
							<aligny>center</aligny>
							<focusedcolor>ButtonText</focusedcolor>
							<label>$INFO[ListItem.Label]</label>
						</control>
					</itemlayout>
					<focusedlayout height="38" width="730">
						<control type="image">
							<posy>0</posy>
							<width>730</width>
							<height>38</height>
							<align>left</align>
							<aligny>center</aligny>
							<texture>ButtonFo.png</texture>
							<visible>Control.HasFocus(3)</visible>
						</control>
						<control type="label">
							<posy>0</posy>
							<width>730</width>
							<height>38</height>
							<textcolor>ButtonText</textcolor>
							<font>comic20</font>
							<align>center</align>
							<aligny>center</aligny>
							<focusedcolor>ButtonText</focusedcolor>
							<label>$INFO[ListItem.Label]</label>
						</control>
					</focusedlayout>
				</control>

				<control type="list" id="6">
					<posx>20</posx>
					<posy>100</posy>
					<width>730</width>
					<height>300</height>
					<onleft>7</onleft>
					<onup>6</onup>
					<ondown>6</ondown>
					<itemlayout height="38" width="730">

						<control type="label">

							<textcolor>SettingsDetail</textcolor>
							<font>comic20</font>
							<align>center</align>
							<aligny>center</aligny>
							<focusedcolor>ButtonText</focusedcolor>
							<label>$INFO[ListItem.Label]</label>
						</control>
					</itemlayout>
					<focusedlayout height="38" width="730">

						<control type="image">
							<align>left</align>
							<aligny>center</aligny>
							<texture>ButtonFo.png</texture>
							<visible>Control.HasFocus(6)</visible>
						</control>
						<control type="label">
							<textcolor>ButtonText</textcolor>
							<font>comic20</font>
							<align>center</align>
							<aligny>center</aligny>
							<focusedcolor>ButtonText</focusedcolor>
							<!--- <label>$INFO[ListItem.Label] ($INFO[ListItem.Label2])</label> -->
							<label>$INFO[ListItem.Label]</label>
						</control>
					</focusedlayout>
				</control>
			</control>


			<control type="button" id="5">
				<description>Default Addon Button</description>
				<posx>5</posx>
				<posy>390</posy>
				<width>50</width>
				<height>50</height>
				<font>METF_TitleTextMedium</font>
				<colordiffuse>00FFFFFF</colordiffuse>
				<textcolor>00FFFFFF</textcolor>
				<focusedcolor>00FFFFFF</focusedcolor>
				<texturefocus colordiffuse="FFFFFFFF">buttons/obtenirplus.png</texturefocus>
				<texturenofocus colordiffuse="FF7F7F7F">buttons/obtenirplus.png</texturenofocus>
				<align>right</align>
				<aligny>center</aligny>
        <onright condition="!String.IsEmpty(Container(6).ListItem.Label)">6</onright>
				<onright>3</onright>
				<onup>7</onup>
				<ondown>7</ondown>
				<visible>Integer.IsGreater(Container(6).NumItems,0)</visible>
			</control>

			<control type="button" id="7">
				<description>Cancel button</description>
				<posx>5</posx>
				<posy>15</posy>
				<width>50</width>
				<height>50</height>
				<font>METF_TitleTextMedium</font>
				<colordiffuse>00FFFFFF</colordiffuse>
				<textcolor>00FFFFFF</textcolor>
				<focusedcolor>00FFFFFF</focusedcolor>
				<texturefocus colordiffuse="FFFFFFFF">buttons/cancel.png</texturefocus>
				<texturenofocus colordiffuse="FF7F7F7F">buttons/cancel.png</texturenofocus>
				<align>right</align>
				<aligny>center</aligny>
				<onright condition="!String.IsEmpty(Container(6).ListItem.Label)">6</onright>
				<onright>3</onright>
				<onup>5</onup>
				<ondown>5</ondown>
				<!-- <onclick>Close</onclick> -->
				<info>.</info>
				<label>.</label>
				<animation type="Conditional" condition="Control.HasFocus(7)">
					<effect type="fade" start="100" end="80"  pulse="true" time="1500" />
				</animation>
			</control>
		</control>
