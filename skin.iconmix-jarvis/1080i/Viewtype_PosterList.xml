<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="Viewtype_PosterList">
		<control type="group">
			<visible>Control.IsVisible(561)</visible>
		<control type="list" id="561">		  
			<posx>10</posx>
			<posy>20</posy>
			<height>770</height>
			<width>1900</width>
			<onup>561</onup>
			<ondown>561</ondown>
			<include condition="!Skin.HasSetting(ViewLockdown)">OnLeft7000</include>
			<onright>60</onright>
			<scrolltime>160</scrolltime>
			<orientation>vertical</orientation>
			<preloaditems>2</preloaditems>
			<pagecontrol>60</pagecontrol>
			<include>Animation_OpenCloseFade</include>
			<include>Animation_FadedByMenu</include>
			<include>Animation_HiddenByInfo</include>
			<itemlayout width="1900" height="200">
				
			<control type="image">				
				<posx>5</posx>
				<posy>5</posy>
				<height>190</height>
				<fadetime>100</fadetime>
				<aspectratio>keep</aspectratio>
				<texture>$VAR[PosterThumb]</texture>
			</control>
		
			</itemlayout>
			<focusedlayout width="1900" height="200">
				<include>ActiveClearArt</include>
				</focusedlayout>
		</control>
		<!-- Thumbnails -->
	
	</control>
</include>
</includes>
